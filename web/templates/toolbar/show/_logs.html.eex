<span data-toggle="popover" data-title="Server Logs">
  <i class="glyphicon glyphicon-book" aria-hidden="true"></i>
  <%= length @logs.entries %>
</span>
<div class="hidden" data-role="popover-content">
  <div class="fluid-container popover-container">
    <table class="table table-hover table-condensed">
      <thead>
        <th> Time </th>
        <th> Level </th>
        <th> Message </th>
      </thead>
      <tbody>
        <%= for entry <- @logs.entries |> Enum.reverse do %>
          <tr class="<%= log_entry_color_class(entry) %>">
            <td class="nowrap"><%= entry.timestamp %></td>
            <td><%= entry.level %></td>
            <td class="nowrap"><%= entry.message |> text_to_html %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
